# Environment Configuration for LLM Risk Visualizer
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=sqlite:///risk_data.db
# For PostgreSQL: postgresql://username:password@localhost:5432/llm_risk_db

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# JWT Secret Key (generate a secure random key)
JWT_SECRET_KEY=your-super-secret-jwt-key-here-change-this-in-production

# API Keys (Optional - for live data integration)
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-api-key-here

# Email Configuration (for alerts)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=llm-monitor@yourcompany.com

# Notification Recipients
ALERT_EMAIL_RECIPIENTS=admin@yourcompany.com,security@yourcompany.com

# Slack Integration (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Webhook Notifications (Optional)
WEBHOOK_URL=https://your-webhook-endpoint.com/alerts

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Production Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Security Settings
SESSION_TIMEOUT_HOURS=24
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30